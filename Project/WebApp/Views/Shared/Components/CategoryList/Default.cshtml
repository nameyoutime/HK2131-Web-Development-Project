<div>

    <a href="#" class="list-group-item active">
        Category
    </a>
    <ul class="list-group">
        @foreach (var cate in Model)
        {
            string name = cate.Name;
            int count = Model.Where(x => x.Name == name).Count();
            <li class="list-group-item">
                <a asp-controller="product" asp-action="list" asp-route-id="@cate.Id">@cate.Description</a>
                <span class="label label-primary pull-right">@count</span>
            </li>
        }
    </ul>

</div>